<h1><%=@product.name%></h1>


<%= button_to "Delete", product_delete_path(@product.id), method: :delete %>
<%= button_to "Edit", edit_product_path(@product.id), method: :get %>


<% @product.categories.each do |category| %>
<a href="/categories/<%=category.id%>"><%= category.name %></a>
</br>
<% end %>
