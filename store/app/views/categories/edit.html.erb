<h1>Edit Category</h1>

<%= form_for @category do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, value: @category.name %>
	</br>
	<div class="container check_field">
	<div class="row">
	<% @products.each do |product| %>
		<div class="col-cs-6 col-sm-4 col-md-3 col-lg-2">
		<% if @category.products.include?(product) %>
			<%= check_box_tag 'checked[]', product.id, :active %>
			<%= label_tag product.name %>
		<% else %>
			<%= check_box_tag 'checked[]', product.id %>
			<%= label_tag product.name %>
		<% end %>
		</div>
		</br>
	<% end %>
	</div>

	<%= f.submit "Submit"%>
<% end %>
	</div>
